{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "**/*.test.js", "*.js"]
}
