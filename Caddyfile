{$DOMAIN}:80 {
        redir https://{$DOMAIN}{uri} permanent
}

{$DOMAIN}:443 {
        route /* {
                reverse_proxy website:5000
        }

        @cms {
                path ^/(admin|api|i18n|graphql|content-manager|content-type-builder|email|email-designer|sitemap|users-permissions|upload|uploads)*
        }

        reverse_proxy @cms cms:5000

        file_server
}
